<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_challengeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:text="Challenge Name"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <EditText
                android:id="@+id/editText_challengeName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:allowUndo="false"
                android:ems="10"
                android:inputType="textPersonName"
                android:selectAllOnFocus="false"
                android:text="Name"
                android:textAlignment="viewEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/editText"
                android:layout_alignBottom="@+id/editText"
                android:layout_alignParentStart="true"
                android:text="Challenge Date"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <EditText
                android:id="@+id/editText_challengeTime"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:ems="10"
                android:inputType="date"
                android:text="Date"
                android:textAlignment="viewEnd" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_challengeActivities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Challenge Activities"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:layout_editor_absoluteX="10dp" />

            <Button
                android:id="@+id/button_editChallengeActivities"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/textView_challengeActivities"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_group_collapse_05"
                android:backgroundTint="@color/colorAccent" />

            <GridView
                android:id="@+id/gridView_challenge_activities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView_challengeActivities"
                android:columnWidth="50dp"
                android:gravity="center"
                android:horizontalSpacing="20dp"
                android:numColumns="auto_fit"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:verticalSpacing="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_challengeParticipant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Challenge Participants"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:layout_editor_absoluteX="10dp" />

            <Button
                android:id="@+id/button_editParticipants"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/textView_challengeActivities"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_group_collapse_05"
                android:backgroundTint="@color/colorAccent" />

            <GridView
                android:id="@+id/gridview_challenge_participants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button_editParticipants"
                android:columnWidth="50dp"
                android:gravity="center"
                android:horizontalSpacing="20dp"
                android:numColumns="auto_fit"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:verticalSpacing="10dp" />

        </RelativeLayout>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>